<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="@android:style/Theme.Holo.Light">
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@drawable/background_light</item>
        <item name="android:imageButtonStyle">@style/ImageButtonLight</item>
        <item name="android:buttonStyle">@style/ButtonLight</item>
        <item name="android:buttonStyleToggle">@style/ToggleButtonLight</item>
        <item name="android:actionBarStyle">@style/ActionBarTheme</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/textColorDark</item>
        <item name="android:typeface">serif</item>
        <item name="android:textStyle">bold</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_arrow_back_black_36dp</item>
    </style>

    <style name="ActionBarTheme" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:displayOptions">useLogo|showHome|homeAsUp</item>
        <item name="android:logo">@drawable/logo</item>
    </style>


    <style name="ToggleButtonLight" parent="@android:style/Widget.Holo.Button.Toggle">
        <item name="android:background">@drawable/togglebutton_light_selector</item>
        <item name="android:textColor">@color/textColorDark</item>
        <item name="android:shadowColor">#A8A8A8</item>
        <item name="android:shadowDx">5</item>
        <item name="android:shadowDy">5</item>
        <item name="android:shadowRadius">15</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="ButtonLight" parent="@android:style/Widget.Holo.Button">
        <item name="android:background">@drawable/buttonshape_light</item>
        <item name="android:textColor">@color/textColorDark</item>
        <item name="android:shadowColor">#A8A8A8</item>
        <item name="android:shadowDx">5</item>
        <item name="android:shadowDy">5</item>
        <item name="android:shadowRadius">15</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="ImageButtonLight" parent="@android:style/Widget.Holo.ImageButton">
        <item name="android:src">@drawable/ic_play_circle_light</item>
        <item name="android:background">@android:color/transparent</item>
    </style>


    <style name="AppThemeDark" parent="@android:style/Theme.Holo.Light">
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@drawable/background_dark</item>
        <item name="android:textColor">@color/textColorLight</item>
        <item name="android:imageButtonStyle">@style/ImageButtonDark</item>
        <item name="android:buttonStyle">@style/ButtonDark</item>
        <item name="android:buttonStyleToggle">@style/ToggleButtonDark</item>
        <item name="android:actionBarStyle">@style/ActionBarTheme</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:typeface">serif</item>
        <item name="android:textStyle">bold</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_arrow_back_white_36dp</item>
    </style>

    <style name="ButtonDark" parent="@android:style/Widget.Holo.Button">
        <item name="android:textColor">@color/textColorLight</item>
        <item name="android:background">@drawable/buttonshape_dark</item>
        <item name="android:shadowColor">#A8A8A8</item>
        <item name="android:shadowDx">5</item>
        <item name="android:shadowDy">5</item>
        <item name="android:shadowRadius">15</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="ToggleButtonDark" parent="@android:style/Widget.Holo.Button.Toggle">
        <item name="android:textColor">@color/textColorLight</item>
        <item name="android:background">@drawable/togglebutton_dark_selector</item>
        <item name="android:shadowColor">#A8A8A8</item>
        <item name="android:shadowDx">5</item>
        <item name="android:shadowDy">5</item>
        <item name="android:shadowRadius">15</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="ImageButtonDark" parent="@android:style/Widget.Holo.ImageButton">
        <item name="android:src">@drawable/ic_play_circle_dark3</item>
        <item name="android:background">@android:color/transparent</item>
    </style>
</resources>
