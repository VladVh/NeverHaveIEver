<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.development.vvoitsekh.neverhaveiever.main.MainActivity"
    android:weightSum="1">

    <TextView
        android:id="@+id/mainAppName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="@string/app_name"
        android:textAlignment="center"
        android:textSize="24sp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/main_kids"
        android:layout_below="@+id/mainAppName"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="132dp"
        android:id="@+id/mainKidsButton"/>

    <Button
        android:id="@+id/mainNormalButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="@string/main_normal"
        android:layout_below="@+id/mainKidsButton"
        android:layout_alignLeft="@+id/mainKidsButton"
        android:layout_alignStart="@+id/mainKidsButton"/>

    <Button
        android:id="@+id/mainAdultButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="@string/main_adult"
        android:layout_below="@+id/mainNormalButton"
        android:layout_alignLeft="@+id/mainNormalButton"
        android:layout_alignStart="@+id/mainNormalButton"/>

    <Button
        android:id="@+id/mainSettingsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:text="@string/mainSettings"/>

</RelativeLayout>
