<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.development.vvoitsekh.neverhaveiever.main.MainActivity"
    android:weightSum="1">

    <include layout="@layout/activity_base"
             android:id="@+id/include"/>
    <!--<TextView-->
        <!--android:id="@+id/mainAppName"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_marginTop="40dp"-->
        <!--android:text="@string/app_name"-->
        <!--android:textAlignment="center"-->
        <!--android:textSize="32sp"-->
        <!--android:layout_alignParentRight="true"-->
        <!--android:layout_alignParentEnd="true"-->
        <!--android:layout_alignParentLeft="true"-->
        <!--android:layout_alignParentStart="true"/>-->

    <ToggleButton
        android:textOff="@string/main_kids"
        android:textOn="@string/main_kids"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mainKidsButton"
        android:layout_above="@+id/mainTeenagerButton"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp"/>

    <ToggleButton
        android:id="@+id/mainTeenagerButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textOff="@string/main_teen"
        android:textOn="@string/main_teen"
        android:layout_marginBottom="15dp"
        android:layout_above="@+id/mainAdultButton"
        android:layout_alignStart="@+id/mainKidsButton"/>

    <ToggleButton
        android:id="@+id/mainAdultButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textOff="@string/main_adult"
        android:textOn="@string/main_adult"
        android:layout_above="@+id/mainSettingsButton"
        android:layout_alignStart="@+id/mainTeenagerButton"
        android:layout_marginBottom="45dp"/>

    <Button
        android:id="@+id/mainSettingsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:text="@string/mainSettings"/>

    <Button
        android:id="@+id/mainPlayButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/main_play"
        android:layout_below="@+id/include"
        android:layout_alignStart="@+id/mainKidsButton"
        android:layout_marginTop="78dp"/>

</RelativeLayout>
